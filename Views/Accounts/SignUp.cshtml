@model OnlineArticleCreator.Models.ViewModels.AccountViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<style>
    .login-header {
        text-align: center;
        font-size: 32px;
        font-weight: bold;
    }

    .login-subheader {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
    }

    .height-350px {
        height: 350px;
    }

    .width-350px {
        width: 350px;
    }

    .somewhat-rounded {
        border-radius: 25%;
    }

    .width-200px {
        width: 200px;
    }

    .small-text {
        font-size: 16px;
    }
</style>

@{
    var textboxClass = new { @class = "width-200px rounded bg-dark text-light" };
}

<div class="container-fluid border border-light somewhat-rounded text-center width-350px bg-secondary">
    <form asp-action="SignUp">
        <div class="row py-2">
            <!--Header-->
            <div class="col d-flex justify-content-center login-header">
                <p1>Sign Up</p1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center login-subheader">
                <div class="form-group ">
                    <label asp-for="FirstName" class="control-label border border-light width-200px "></label>
                    <br />

                    @Html.TextBoxFor(m => m.FirstName, textboxClass)
                    <br />
                    <span asp-validation-for="FirstName" class="text-danger small-text"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center login-subheader">
                <div class="form-group ">
                    <label asp-for="LastName" class="control-label border border-light width-200px "></label>
                    <br />

                    @Html.TextBoxFor(m => m.LastName, textboxClass)
                    <br />
                    <span asp-validation-for="LastName" class="text-danger small-text"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center login-subheader">
                <div class="form-group ">
                    <label asp-for="UserName" class="control-label border border-light width-200px "></label>
                    <br />

                    @Html.TextBoxFor(m => m.UserName, textboxClass)
                    <br />
                    <span asp-validation-for="UserName" class="text-danger small-text"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center login-subheader">
                <div class="form-group ">
                    <label asp-for="Email" class="control-label border border-light width-200px "></label>
                    <br />

                    @Html.TextBoxFor(m => m.Email, textboxClass)
                    <br />
                    <span asp-validation-for="Email" class="text-danger small-text"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center login-subheader">
                <div class="form-group">
                    <label asp-for="Password" class="control-label border border-light width-200px"></label>
                    <br />
                    @Html.PasswordFor(m => m.Password, textboxClass)
                    <br />
                    <span asp-validation-for="Password" class="text-danger small-text"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <div class="form-group">
                    <input type="submit" value="Sign Up" asp-action="SignUp"
                           class="btn btn-primary border border-light width-200px" />
                </div>
            </div>
        </div>


    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


