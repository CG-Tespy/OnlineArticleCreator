@model OnlineArticleCreator.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div>
    <form asp-action="Login">

        <div class="form-group">
            <label asp-for="UserNameOrEmail" class="control-label">Email/User Name</label>
            <br />
            @Html.TextBoxFor(m => m.UserNameOrEmail, new { style = "width:300px" })
            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <br />
            @Html.PasswordFor(m => m.Password, new { style = "width:300px" })
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Login" asp-action="Login" class="btn btn-primary" />
        </div>
    </form>
</div>